//
// Destroy an item
//
include "include/modules";

program textcmd_destroy( who )
	SendSysMessage( who, "Please target something to destroy" );
	var tgt := TargetCoordinates( who );
	if( tgt )
		if( tgt.item )
			DestroyItem( tgt.item );
		else
			SendSysMessage( who, "You can only destroy items" );
		endif
	endif
endprogram